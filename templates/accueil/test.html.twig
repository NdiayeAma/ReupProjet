{% extends '@EasyAdmin/page/content.html.twig' %}

{% block content %}
    <div class="row row-cols-1 row-cols-md-2 g-4">

    <div class="col">
        <div class="card">
            <img src="{{ asset('images/entrepot.jpg') }}"  class="card-img-top"
                 alt="Hollywood Sign on The Hill" />
            <div class="card-body">
                <h5 class="card-title">Synthèse générale</h5>
                <p class="card-text">
                    Pour une synthèse générale des matières collectées  en fonction  du  client, hall, site ou période, cliquez ici !
                </p>
                <button onclick="location.href='{{ path('app_synthese') }}'"  style="align-self: center" type="button" class="btn btn-primary" data-toggle="button" aria-pressed="false" autocomplete="off">
                    Consulter
                </button>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="card">
            <img src="{{ asset('images/hall.jpg') }}" class="card-img-top"
                 alt="Palm Springs Road" />
            <div class="card-body">
                <h5 class="card-title">Suivi détaillé</h5>
                <p class="card-text">
                    Pour consulter les données détaillées des suivis, cliquez ici !


                </p>
                <button style="align-self: center" onclick="location.href='{{ path('app_recherche_synthese_detaille') }}'" type="button" class="btn btn-primary" data-toggle="button" aria-pressed="false" autocomplete="off">
                    Consulter
                </button>
            </div>
        </div>
    </div>

{% endblock %}